{% extends '::/layout/usuario.html.twig' %}


{% block body %}
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Editable Table
                </div>

            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a id="sample_editable_1_new"  href="{{path('categoria_new')}}" class="btn green">
                                    Add New <i class="fa fa-plus"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">

                        </div>
                    </div>
                </div>
                <div id="sample_editable_1_wrapper" class="dataTables_wrapper no-footer">
                    <div class="table-scrollable"><table class="table table-striped table-hover table-bordered dataTable no-footer" id="sample_editable_1" role="grid" aria-describedby="sample_editable_1_info">
                            <thead>
                                <tr role="row"><th class="sorting_asc" tabindex="0" aria-controls="sample_editable_1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="
                                                   Username
                                                   : activate to sort column ascending" style="width: 179px;">
                                       {{ knp_pagination_sortable(pagination, 'Nome', 'a.nome') }}
                                    </th><th class="sorting" tabindex="0" aria-controls="sample_editable_1" rowspan="1" colspan="1" aria-label="
                                             Notes
                                             : activate to sort column ascending" style="width: 156px;">
                                        {{ knp_pagination_sortable(pagination, 'Status', 'a.status') }}
                                       
                                    </th><th class="sorting" tabindex="0" aria-controls="sample_editable_1" rowspan="1" colspan="1" aria-label="
                                             Edit
                                             : activate to sort column ascending" style="width: 86px;">
                                        Ação
                                    </th></tr>
                            </thead>
                            <tbody>
                                {% for categorium in pagination %}
                                    <tr>
                                        <td class="highlight">
                                            <div class="success">
                                            </div>
                                            <a href="#"> {{ categorium.nome }} </a>
                                        </td>
                                        <td class="hidden-xs">
                                            {% if categorium.status %}Ativo{% else %}Inativo{% endif %}
                                        </td>

                                        <td>
                                            <a href="{{ path('categoria_edit', { 'id': categorium.id }) }}" class="btn default btn-xs purple">
                                                <i class="fa fa-edit"></i> Edit </a>
                                            <a href="{{ path('categoria_show', { 'id': categorium.id }) }}" class="btn default btn-xs purple">
                                                <i class="fa fa-edit"></i> show </a>
                                        </td>
                                    </tr>
                                {% endfor %}





                            </tbody>
                        </table></div>
                                <div class="row">
                                    <div class="col-md-5 col-sm-12">
                                        <div class="dataTables_info" id="sample_editable_1_info" role="status" aria-live="polite">
                                        Total :  {{ pagination.getTotalItemCount }}   <!--{{pagination.isSorted('a.nome')}}-->
                                        </div>
                                    </div>
                                        <div class="col-md-7 col-sm-12">
                                            <div class="dataTables_paginate paging_simple_numbers" id="sample_editable_1_paginate">
                                             {{ knp_pagination_render(pagination) }}   
                                             
                                            </div></div></div></div>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>                  

{% endblock %}
