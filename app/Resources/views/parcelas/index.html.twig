



{% extends '::/layout/usuario.html.twig' %}


{% block body %}
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Serviços
                </div>

            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="portlet-body">
                                <h4>Buscar minhas parcelas</h4>
                                {{ form_start(form, {'action': path('parcelas_index'), 'method': 'post','attr': {'class': 'form-inline'}}) }}

                                <div class="form-group">
                                    <label class="sr-only" for="exampleInputEmail2">De</label>
                                    {{form_row(form.de , { 'label' : false, 'attr' : { 'class' : 'form-control' ,'placeholder':'de'}})}}

                                </div>
                                <div class="form-group">
                                    <label class="sr-only" for="exampleInputEmail2">Ate</label>
                                    {{form_row(form.ate , { 'label' : false, 'attr' : { 'class' : 'form-control','placeholder':'ate' }})}}

                                </div>

                                <div class="btn-group">
                                    
                                    <button id="sample_editable_1_new"  type='submit' class="btn green">
                                       Buscar <i class="fa fa-plus"></i>
                                    </button>
                                </div>

                                {{form_rest(form)}}
                                {{ form_end(form) }}
                                <hr>



                            </div>

                            <div class="btn-group">
                                <a id="sample_editable_1_new"  href="{{path('clientes_new')}}" class="btn green">
                                    Nova transação <i class="fa fa-plus"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">

                        </div>
                    </div>
                </div>
                <div id="sample_editable_1_wrapper" class="dataTables_wrapper no-footer">
                    <div class="table-scrollable"><table class="table table-striped table-hover table-bordered dataTable no-footer" id="sample_editable_1" role="grid" aria-describedby="sample_editable_1_info">
                            <thead>
                                <tr>
                                    <th>Titulo</th>
                                    <th>Numero</th>
                                    <th>Valor</th>
                                    <th>Status</th>

                                    <th>Vencimento</th>
                                    <th>Ação</th>
                                </tr>
                            </thead>
                            <tbody>


                                {% for parcela in parcelas %}
                                    <tr>
                                        <td>{{ parcela.titulo }}</td>
                                        <td>{{ parcela.numero }} de {{parcela.qtdParcela}}</td>
                                        <td>{{ parcela.valor }}</td>
                                        <td>{{ parcela.status }}</td>

                                        <td>{% if parcela.vencimento %}{{ parcela.vencimento|date('Y-m-d H:i:s') }}{% endif %}</td>


                                        <td>
                                            <a href="{{ path('parcelas_edit', { 'id': parcela.id }) }}" class="btn default btn-xs purple">
                                                <i class="fa fa-edit"></i> Edit </a>
                                            <a href="{{ path('parcelas_show', { 'id': parcela.id }) }}" class="btn default btn-xs purple">
                                                <i class="fa fa-edit"></i> show </a>
                                        </td>
                                    </tr>
                                {% endfor %}







                            </tbody>
                        </table></div>
                    <div class="row">
                        <div class="col-md-5 col-sm-12">
                            <div class="dataTables_info" id="sample_editable_1_info" role="status" aria-live="polite">
                                Total : 
                            </div>
                        </div>
                        <div class="col-md-7 col-sm-12">
                            <div class="dataTables_paginate paging_simple_numbers" id="sample_editable_1_paginate">


                            </div></div></div></div>
            </div>
        </div>

    </div>                  

{% endblock %}
