{% extends 'base.html.twig' %}

{% block body %}
    <h1>Parcelas</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ parcela.id }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ parcela.numero }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ parcela.status }}</td>
            </tr>
            <tr>
                <th>Valor</th>
                <td>{{ parcela.valor }}</td>
            </tr>
            <tr>
                <th>Vencimento</th>
                <td>{% if parcela.vencimento %}{{ parcela.vencimento|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('parcelas_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('parcelas_edit', { 'id': parcela.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
