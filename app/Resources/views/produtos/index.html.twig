{% extends '::/layout/usuario.html.twig' %}


{% block body %}
    <h1>Produtos list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Valor</th>
                <th>Descricao</th>
                <th>Quantidade</th>
                <th>Status</th>
                <th>Datacadastro</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produto in produtos %}
            <tr>
                <td><a href="{{ path('produtos_show', { 'id': produto.id }) }}">{{ produto.id }}</a></td>
                <td>{{ produto.nome }}</td>
                <td>{{ produto.valor }}</td>
                <td>{{ produto.descricao }}</td>
                <td>{{ produto.quantidade }}</td>
                <td>{% if produto.status %}Yes{% else %}No{% endif %}</td>
                <td>{% if produto.dataCadastro %}{{ produto.dataCadastro|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('produtos_show', { 'id': produto.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('produtos_edit', { 'id': produto.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('produtos_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
