



{% extends '::/layout/usuario.html.twig' %}


{% block body %}


    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-edit"></i>Seus Banners
            </div>

        </div>
        <div class="portlet-body">
            <div class="table-toolbar">
                <div class="row">
                    <div class=" col-md-offset-1 col-md-6">
                        <div class="btn-group">
                            <a id="sample_editable_1_new" class="btn green" href="{{path('fotos_new')}}">
                                Add New <i class="fa fa-plus"></i>
                            </a>
                        </div>
                    </div>

                </div>
            </div>
            <div class="row"> 
                  {% for foto in fotos %}
                    <div class="col-sm-4 col-md-3"> 
                        <div class="thumbnail"> 
                            <img data-src="holder.js/100%x200" alt="100%x200" src="{{asset('uploads/Banners/'~foto.arquivo)}}" data-holder-rendered="true" style="height: 200px; width: 100%; display: block;"> 
                            <div class="caption"> 
                                <h3>{{ foto.titulo }}</h3> 
                                
                                <p>
                                    <a href="{{ path('fotos_show', { 'id': foto.id }) }}" class="btn btn-primary" role="button">Show</a> 
                                    <a href="{{ path('fotos_edit', { 'id': foto.id }) }}" class="btn btn-default" role="button">Edit</a>
                                </p> 
                            </div> 
                        </div> 
                    </div> 
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

