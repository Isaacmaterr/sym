{% extends '::layout/usuario.html.twig' %}

{% block body %}

   

    <div class="portlet box green ">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Registro de Cliente
            </div>
            {{ form_errors(form) }}

        </div>
        <div class="portlet-body form ">
            {{ form_start(form, {'action': path('clientes_new'), 'method': 'post','attr': {'class': 'form-horizontal'}}) }}


            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">Nome</label>
                    <div class="col-md-9">
                        {{form_row(form.nome ,{ 'label' : false, 'attr' : {'class' : 'form-control'}})}}

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Email</label>

                    <div class="col-md-9">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class=" fa fa-plus" ></i>
                            </span>
                            {{form_row(form.email,{'label' : false, 'attr' : {'class' : 'form-control'}})}}
                        </div>
                    </div>
                </div>
             
                <div class="form-group">
                    <label class="col-md-3 control-label">telefone</label>

                    <div class="col-md-9">
                        <div class="input-group">
                            <span class="input-group-addon" id="add">
                                <i class=" fa fa-plus"></i>
                            </span>
                            <input type="text"  name="form[telefones][0]" class="form-control" />
                            
                        </div>
                    </div>
                </div>
                <div id="telefones"></div>



                <div class="form-group">
                    <label class="col-md-3 control-label">Endere√ßo</label>
                    <div class="col-md-9">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                            </span>
                            {{form_row(form.endereco , { 'label' : false, 'attr' : { 'class' : 'form-control' }})}}
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Bairro</label>
                    <div class="col-md-9">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                            </span>
                            {{form_row(form.bairro , { 'label' : false, 'attr' : { 'class' : 'form-control' }})}}
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">UF</label>
                    <div class="col-md-9">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                            </span>
                            {{form_row(form.uf , { 'label' : false, 'attr' : { 'class' : 'form-control' }})}}
                        </div>
                    </div>
                </div>

   <div class="form-group">
                    <label class="col-md-3 control-label">Cep</label>
                    <div class="col-md-9">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                            </span>
                            {{form_row(form.cep , { 'label' : false, 'attr' : { 'class' : 'form-control' }})}}
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        
                        <button class="btn green">Salvar</button>
                    </div>
                </div>
            </div>
            {{form_rest(form)}}
            {{ form_end(form) }}
        </div>
    </div>
      <script src="//code.jquery.com/jquery-1.12.0.min.js"></script>


    <script>
        $(document).ready(function () {
            i = 1;
            $("#add").click(function () {
                console.log(i);
                $("#telefones").append($('<div/>', {class: 'form-group'}).append($('<label/>', {class: 'col-md-3 control-label', text: 'telefone'}),
                        $('<div/>', {class: 'col-md-9'}).append($('<div/>', {class: 'input-group'}).append($('<span/>', {class: 'input-group-addon'})
                        .append($('<i/>', {class: 'fa fa-plus'})
                                )
                        , $('<div/>', {}).append($('<input/>', {class: 'form-control', name: 'form[telefones][' + i + ']'}))
                        )
                        )
                        )
                        );
                i++;
            });
        });

$('#teste').click(function(){
    
    alert('teste');
});
    </script>
{% endblock %}

