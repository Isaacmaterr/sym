{% extends '/layout/usuario.html.twig' %}

{% block body %}
 <div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-edit"></i>Cliente
        </div>

    </div>
    <div class="portlet-body">
        <div class="table-toolbar">
            <div class="row">
                <div class=" col-md-offset-1 col-md-6">
                    <div class="btn-group">
                        <a id="sample_editable_1_new" class="btn green" href="{{path('clientes_new')}}">
                            Add New <i class="fa fa-plus"></i>
                        </a>
                    </div>
                </div>

            </div>
        </div>
        <div class="row"> 
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-md-1">
                        Nome 
                    </div>
                    <div class="col-lg-9">{{ cliente.nome }}</div>
                </div>
                   <div class="row">
                    <div class="col-md-1">
                        Email 
                    </div>
                    <div class="col-lg-9">{{ cliente.email }}</div>
                </div>
                   <div class="row">
                    <div class="col-md-1">
                        Endereco 
                    </div>
                    <div class="col-lg-9">{{ cliente.endereco.endereco }}</div>
                </div>
                   <div class="row">
                    <div class="col-md-1">
                        Telefones 
                    </div>
                       <div class="col-lg-9">
                            {% for telefone in cliente.telefones%}
                                <p>{{telefone.numero}}</p>
                            {% endfor %}
                       </div>
                </div>
            </div>
            

            

                                   
        </div>
    </div>
</div>
{% endblock %}


